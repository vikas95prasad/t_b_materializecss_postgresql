<p id="notice"><%= notice %></p>

<h2>Turf Infos</h2>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Landmark</th>
      <th>Phone</th>
      <th>Charges</th>
      <th>Available</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turf_infos.each do |turf_info| %>
      <tr>
        <td><%= turf_info.name %></td>
        <td><%= turf_info.address %></td>
        <td><%= turf_info.landmark %></td>
        <td><%= turf_info.phone %></td>
        <td><%= turf_info.charges %></td>
        <td><%= turf_info.available %></td>
        <td><%= turf_info.email %></td>
        <td><%= turf_info.phone %></td>
        <td><%= link_to 'Show', turf_info %></td>
        <td><%= link_to 'Edit', edit_turf_info_path(turf_info) %></td>
        <td><%= link_to 'Destroy', turf_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+', new_turf_info_path, class: "btn-floating btn-large waves-effect waves-light red" %>
